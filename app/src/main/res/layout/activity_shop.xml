<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/shop_tv_title"
            android:text="@string/shop"
            android:layout_width="134dp"
            android:layout_height="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bungee"
            android:textColor="#FABE0C"
            android:contentDescription="@string/shop_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.172"
            android:textSize="30sp" app:layout_constraintHorizontal_bias="0.541" android:textAlignment="center"/>
    <TextView
            android:id="@+id/shop_tv_coins"
            android:layout_width="158dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.042" android:fontFamily="@font/baloo"/>
    <Button
            android:id="@+id/shop_btn_back"
            android:text="@string/shop_btn_back"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_round"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_coins"
            app:layout_constraintVertical_bias="0.708"/>

    <Button
            android:id="@+id/shop_btn_buyApple"
            android:text="@string/shop_btn_buyApple"
            android:layout_width="79dp"
            android:layout_height="34dp"
            android:background="@drawable/btn_round"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="272dp" app:layout_constraintTop_toBottomOf="@+id/shop_iv_apple"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:id="@+id/shop_iv_header"
            android:layout_width="373dp"
            android:scaleType="fitXY"
            android:layout_height="103dp"
            app:srcCompat="@drawable/bg_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            android:contentDescription="@string/header"/>
    <ImageView
            android:id="@+id/shop_iv_footer"
            android:layout_width="382dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_header_flipped"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_btn_start" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/footer"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="114dp" app:srcCompat="@drawable/apple" android:id="@+id/shop_iv_apple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.524" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_coins"
            app:layout_constraintBottom_toTopOf="@+id/shop_btn_back" app:layout_constraintVertical_bias="0.262"
            android:background="@drawable/bg_border"/>

</androidx.constraintlayout.widget.ConstraintLayout>