<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/shop_tv_title"
            android:text="@string/shop"
            android:layout_width="138dp"
            android:layout_height="47dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bungee"
            android:textColor="#FABE0C"
            android:contentDescription="@string/shop_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.172"
            android:textSize="30sp" app:layout_constraintHorizontal_bias="0.541" android:textAlignment="center"/>

    <TextView
            android:id="@+id/shop_tv_coins"
            android:layout_width="158dp"
            android:layout_height="30dp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.263" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:id="@+id/shop_btn_back"
            android:text="@string/shop_btn_back"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:background="@drawable/btn_round"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_btn_buy"
            app:layout_constraintVertical_bias="0.708" app:layout_constraintBottom_toTopOf="@+id/shop_iv_footer"/>
    <Button
            android:id="@+id/shop_btn_buy"
            android:text="@string/shop_btn_buyApple"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:background="@drawable/btn_round"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_rg"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@+id/shop_btn_back" app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:id="@+id/shop_iv_header"
            android:layout_width="370dp"
            android:scaleType="fitXY"
            android:layout_height="94dp"
            app:srcCompat="@drawable/bg_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            android:contentDescription="@string/header"/>
    <ImageView
            android:id="@+id/shop_iv_footer"
            android:layout_width="382dp"
            android:layout_height="87dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_header_flipped"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_btn_back" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/footer"/>

    <RadioGroup
            android:id="@+id/shop_rg"
            android:layout_width="311dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="168dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.896">
        <RadioButton
                android:id="@+id/shop_rb_item1"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        <RadioButton
                android:id="@+id/shop_rb_item2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        <RadioButton
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:id="@+id/shop_rb_item3"
                android:layout_margin="5dp"/>
    </RadioGroup>
    <TextView
            android:id="@+id/shop_tv_items"
            android:text="@string/shop_tv_itemstText"
            android:layout_width="272dp"
            android:layout_height="26dp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/shop_tv_coins"
            android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp" app:srcCompat="@drawable/apple" android:id="@+id/shop_iv_apple"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_items"
            app:layout_constraintBottom_toTopOf="@+id/shop_rg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.094" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.81"/>
    <ImageView
            android:layout_width="86dp"
            android:layout_height="67dp" app:srcCompat="@drawable/banana" android:id="@+id/shop_iv_banana"
            app:layout_constraintStart_toEndOf="@+id/shop_iv_apple"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/shop_iv_hero"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_items"
            app:layout_constraintBottom_toTopOf="@+id/shop_rg" app:layout_constraintVertical_bias="0.818"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="88dp" app:srcCompat="@drawable/char_hero_01_min" android:id="@+id/shop_iv_hero"
            app:layout_constraintStart_toEndOf="@+id/shop_iv_banana"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_tv_items"
            app:layout_constraintBottom_toTopOf="@+id/shop_rg" app:layout_constraintVertical_bias="0.756"/>

</androidx.constraintlayout.widget.ConstraintLayout>