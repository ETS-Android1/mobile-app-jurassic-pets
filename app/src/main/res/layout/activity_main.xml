<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:gravity="center"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout"
                                                   android:background="#FFFFFF">

    <TextView
            android:id="@+id/main_tv_level"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.181" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_pet" android:layout_marginBottom="24dp"
            app:layout_constraintVertical_bias="0.466"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_coins"
            android:textAlignment="viewStart"/>
    <Button
            android:id="@+id/main_btn_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="@string/main_btn_startPedometer"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_iv_pet"
            app:layout_constraintBottom_toTopOf="@+id/main_btn_stop"/>
    <Button
            android:id="@+id/main_btn_stop"
            android:layout_width="87dp"
            android:layout_height="34dp"
            android:background="@drawable/btn_round"
            android:text="@string/main_btn_stopPedometer"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_start"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"/>
    <Button
            android:id="@+id/main_btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="@string/btn_shop"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.879"/>
    <TextView
            android:id="@+id/main_tv_coins"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.183" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_steps" android:layout_marginBottom="28dp"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_level"
            app:layout_constraintVertical_bias="0.362" android:textAlignment="viewStart"/>
    <ImageView
            android:id="@+id/main_iv_pet"
            android:layout_width="138dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/bg_egg"
            android:contentDescription="@string/image_of_the_pet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.525"/>
    <TextView
            android:id="@+id/main_tv_steps"
            android:layout_width="174dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_coins"
            android:layout_marginBottom="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/mainText"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_name"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/main_tv_name"
            android:layout_width="195dp"
            android:layout_height="51dp"
            android:textSize="16sp"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="44dp"
            app:layout_constraintEnd_toStartOf="@+id/main_btn_shop"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_level"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/mainText"/>
    <ImageView
            android:id="@+id/main_iv_footer"
            android:layout_width="382dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_header_flipped"
            android:contentDescription="@string/footer"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>
