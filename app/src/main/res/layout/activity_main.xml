<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:gravity="center"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout"
                                                   android:background="#FFFFFF">

    <TextView
            android:id="@+id/main_tv_level"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_pet"
            android:layout_marginBottom="24dp"
            app:layout_constraintVertical_bias="0.466"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_coins"
            android:textAlignment="viewStart"/>
    <Button
            android:id="@+id/main_btn_start"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_round"
            android:text="@string/main_btn_startPedometer"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_iv_pet"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintVertical_bias="0.25"/>
    <Button
            android:id="@+id/main_btn_shop"
            android:layout_width="78dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_round"
            android:text="@string/btn_shop"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.879"/>
    <Button
            android:id="@+id/main_btn_feed"
            android:text="@string/btn_feed"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/bungee"
            android:layout_width="78dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/main_btn_shop"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer" app:layout_constraintVertical_bias="0.077"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.879"
    />
    <TextView
            android:id="@+id/main_tv_coins"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.183" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_steps" android:layout_marginBottom="28dp"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_level"
            app:layout_constraintVertical_bias="0.43" android:textAlignment="viewStart"/>
    <ImageView
            android:id="@+id/main_iv_pet"
            android:layout_width="138dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/bg_egg"
            android:contentDescription="@string/image_of_the_pet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.642"/>
    <TextView
            android:id="@+id/main_tv_steps"
            android:layout_width="172dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_coins"
            android:layout_marginBottom="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/mainText"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_name"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/main_tv_name"
            android:layout_width="171dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="44dp"
            app:layout_constraintEnd_toStartOf="@+id/main_btn_shop"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_level"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/mainText"/>
    <ImageView
            android:id="@+id/main_iv_footer"
            android:layout_width="382dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_header_flipped"
            android:contentDescription="@string/footer"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <ProgressBar
            android:id="@+id/main_pb_hapiness"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="135dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_level"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_pet"
            app:layout_constraintVertical_bias="0.648"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_rv_itemList"
            android:layout_width="89dp"
            android:layout_height="236dp"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_feed"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintStart_toEndOf="@+id/main_iv_pet" app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.28"/>

</androidx.constraintlayout.widget.ConstraintLayout>
