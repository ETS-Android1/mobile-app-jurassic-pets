<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:gravity="center"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout"
                                                   android:background="#FFFFFF">

    <TextView
            android:id="@+id/main_tv_level"
            android:layout_width="115dp"
            android:layout_height="41dp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/baloo"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_coins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.141" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:id="@+id/main_btn_start"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_round"
            android:text="@string/main_btn_startPedometer"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_iv_pet"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_iv_footer" app:layout_constraintVertical_bias="0.019"/>
    <Button
            android:id="@+id/main_btn_shop"
            android:layout_width="78dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_round"
            android:text="@string/btn_shop"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bungee"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.879"/>
    <Button
            android:id="@+id/main_btn_feed"
            android:text="@string/btn_feed"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/bungee"
            android:layout_width="78dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/main_btn_shop"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer" app:layout_constraintVertical_bias="0.053"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.879"
    />
    <TextView
            android:id="@+id/main_tv_coins"
            android:layout_width="152dp"
            android:layout_height="38dp"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.162" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/baloo" app:layout_constraintTop_toBottomOf="@+id/main_tv_target"
            android:textAlignment="viewStart"/>
    <TextView
            android:id="@+id/main_tv_target"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/baloo"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintEnd_toStartOf="@+id/main_btn_feed"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_steps"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_coins" app:layout_constraintVertical_bias="0.282"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/main_iv_pet"
            android:layout_width="138dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/bg_egg"
            android:contentDescription="@string/image_of_the_pet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.621"/>
    <TextView
            android:id="@+id/main_tv_steps"
            android:layout_width="171dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewStart"
            android:textColor="@color/mainText"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_name"
            app:layout_constraintBottom_toTopOf="@+id/main_tv_target"/>
    <TextView
            android:id="@+id/main_tv_name"
            android:layout_width="171dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:textColor="@color/mainText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.175"/>
    <ImageView
            android:id="@+id/main_iv_footer"
            android:layout_width="382dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_header_flipped"
            android:contentDescription="@string/footer"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <ProgressBar
            android:id="@+id/main_pb_hapiness"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="110dp"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_feed"
            app:layout_constraintBottom_toTopOf="@+id/main_rv_itemList" app:layout_constraintVertical_bias="0.39"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_rv_itemList"
            android:layout_width="71dp"
            android:layout_height="207dp"
            android:textSize="18sp"
            android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_feed"
            app:layout_constraintBottom_toTopOf="@+id/main_iv_footer"
            app:layout_constraintStart_toEndOf="@+id/main_iv_pet" app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.643"/>

</androidx.constraintlayout.widget.ConstraintLayout>
