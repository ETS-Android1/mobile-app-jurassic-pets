<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/white"
                                                   tools:layout_editor_absoluteY="76dp"
                                                   tools:layout_editor_absoluteX="-4dp">


    <TextView
            android:text="@string/title_screen"
            android:layout_width="311dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bungee"
            android:textSize="36sp" android:textColor="#FABE0C"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.319"/>
    <Button
            android:text="@string/btn_start"
            android:id="@+id/btn_start"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_round"
            android:textColor="@android:color/white" android:textSize="20sp"
            style="@style/Widget.AppCompat.Button.Borderless" android:fontFamily="@font/bungee"
            app:layout_constraintTop_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.68"/>


</androidx.constraintlayout.widget.ConstraintLayout>