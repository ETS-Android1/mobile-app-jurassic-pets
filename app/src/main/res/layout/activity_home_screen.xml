<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/bg_title">
    <TextView
            android:text="@string/title_screen"
            android:layout_width="329dp"
            android:layout_height="55dp" android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bungee"
            app:layout_constraintVertical_bias="0.316" android:textSize="38sp" android:textColor="#FABE0C"
    />
    <Button
            android:text="@string/btn_help"
            android:layout_width="97dp"
            android:layout_height="41dp" android:id="@+id/btn_help"
            app:layout_constraintTop_toBottomOf="@+id/btn_start"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.09"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_about" app:layout_constraintHorizontal_bias="0.296"
            style="@style/Widget.AppCompat.Button" android:fontFamily="@font/bungee"/>
    <Button
            android:text="@string/btn_about"
            android:layout_width="94dp"
            android:layout_height="43dp" android:id="@+id/btn_about"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/btn_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.091"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29" android:fontFamily="@font/bungee"/>
    <Button
            android:text="@string/btn_start"
            android:layout_width="106dp"
            android:layout_height="53dp" android:id="@+id/btn_start"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.094"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:textSize="22sp"
            android:fontFamily="@font/bungee"/>

</androidx.constraintlayout.widget.ConstraintLayout>